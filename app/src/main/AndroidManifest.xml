<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bridgeapp">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BridgeApp">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.StartRubberActivity" />
        <activity android:name=".activity.PlayStageActivity" />
        <activity android:name=".activity.SummaryActivity" />
        <activity android:name=".activity.ScoreActivity" />
        <activity android:name=".activity.HandCheckActivity" />
        <activity android:name=".activity.StartBidStageActivity" />
        <activity android:name=".activity.PlayerHandActivity" />
        <activity android:name=".activity.NewPlayActivity" />
        <activity android:name=".activity.BidActivity" />
        <activity android:name=".activity.CalcActivity" />
        <activity android:name=".activity.DealActivity" />
    </application>

</manifest>